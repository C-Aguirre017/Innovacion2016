<div class="container">
  <div class="row">
    <div class="box">

      <div class="col-md-10 col-md-offset-1">
        <h3 class="aligner">Notificaciones</h3>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-10 col-md-offset-1 text-center">
          <div class="row">
            <% if current_user.retire? %>
              <table class="table table-hove text-center">
                <thead>
                  <th class="text-center">
                    Nombre
                  </th>
                  <th class="text-center">
                    Aceptar
                  </th>
                </thead>
                <tbody>
               <% current_user.retire.applications.where(is_valid: false).each  do |application| %>
                 <tr>
                   <td class="text-center">
                     <%= link_to application.user.full_name ,user_path(application.user.id) %>
                   </td>
                   <td class="text-center">
                     <%= form_tag(aceptar_solicitud_path(application_id: application), method: :post) do %>
                        <%= submit_tag "Aceptar", class: "btn btn-info" %>
                     <% end%>
                   </td>
                 </tr>
              <% end%>
                </tbody>
              </table>
            <% end%>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>
