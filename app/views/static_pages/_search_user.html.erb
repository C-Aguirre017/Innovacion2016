<div class="box">
  <div class="aligner">
    <h3>
      Busqueda de Personas por Nombre
    </h3>
  </div>
  <hr>
  <br>

  <div class="col-md-10 col-md-offset-1">

    <div class="table-responsive">
      <%= form_tag((current_user)) do %>
        <div class="input-group input-group-lg">
          <span class="input-group-addon">
            <i class="fa fa-search"></i>
          </span>
              <%= text_field_tag :user_search,
                       nil,
                       placeholder: 'Ingrese parte de su busqueda',
                       class: 'form-control user-search' %>
            <br>
        </div>
        <br>
        <div class="actions aligner">
          <%= submit_tag "Actualizar", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <table class="table table-hover user-search-results hidden  col-md-10 col-md-offset-1">
        <thead>
          <th>
            Nombre
          </th>
          <th>
            Algo
          </th>
          <th>
            Acciones
          </th>
        </thead>
        <tbody>
          <% if @retires %>
            <% @retires.each_with_index do |retire| %>

            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<script type="text/javascript">
  name_search('<%= find_file_path %>');
</script>
