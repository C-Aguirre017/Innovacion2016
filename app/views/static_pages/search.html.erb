<% content_for :header do %>
<div class="aligner">
  <h3>
    Buscar Personas
  </h3>
</div>
<% end %>

<% content_for :content do %>

<div class="row">
  <div class="col-md-12">

    <div class="table-responsive">

      <div class="input-group input-group-lg">
        <span class="input-group-addon">
          <i class="fa fa-search"></i>
        </span>
        <%= text_field_tag :user_search,
                         nil,
                         placeholder: 'Ingrese parte de su busqueda',
                         class: 'form-control user-search' %>
      </div>

      <table class="table table-hover user-search-results hidden">
        <thead>
          <th>
            Nombre
          </th>
          <th>
            Algo
          </th>
          <th>
            Acciones
          </th>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>

  </div>
</div>
<br>

<script type="text/javascript">
  search();
</script>

<% end %>
