<% content_for :header do %>
<div class="aligner">
  <h3><i><u> Nombre Empresa</u></i></h3>
</div>
<% end %>

<% content_for :content do %>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-7">
      <%=image_tag("jubilado_home.jpg", width: "100%",height: "70%")%>
    </div>
    <div class="col-md-4 col-md-offset-1">
      <div class="row">
        <% if @users.count > 0 %>
          <u><h4 class="aligner">Usuarios creados recientemente</h4></u>
          <hr>
          <table class="table">
            <thead>
              <tr>
                <th>Nombre </th>
                <th>Ciudad</th>
                <th>Linkedin</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name ? user.name.to_s : "?"%></td>
                  <td><%= user.city ? user.city.to_s : "?"%></td>
                  <td><%= user.linkedin ? user.linkedin.to_s : "?"%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
      <hr>
      <% if !user_signed_in? %>
      <div class="aligner col-md-12">
          <%= link_to "Entrar", new_user_session_path, class: "btn btn-primary btn-lg" %><br><br>
          <%= link_to "Registrarse", new_user_registration_path, class: "btn btn-primary btn-lg" %>
      </div>
      <% else %>
      <div class="col-md-12">
          <u><h4 class="aligner">Estad√≠sticas</h4></u>
          <p>
            Numero de Solicitudes:
          </p>
          <p>
            Usuario desde: <%= current_user.created_at.strftime("%d/%M/%Y").to_s%>

          </p>
          <p>

          </p>
      <% end %>
      </div>
    </div>
  </div>
</div>
<br>
<% end %>
