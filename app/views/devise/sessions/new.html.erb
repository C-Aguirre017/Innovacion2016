<div class="container">
  <div class="row">
    <div class="box">
      <div class="aligner">
        <h2>Iniciar Sesión</h2>
      </div>
      <div class="col-md-4 col-md-offset-4 aligner">
        <br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Correo Electronico" %><br/>
          <%= f.email_field :email, autofocus: true , class: "form-control"%>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %><br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me , "Recuerdame"%>
        </div>
        <% end -%>
        <br>
        <div class="actions">
          <%= f.submit "Entrar", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
