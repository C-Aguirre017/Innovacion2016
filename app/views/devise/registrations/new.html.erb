<div class="container">
  <div class="row">
    <div class="box">
        <div class="aligner">
          <h2>Registrarse</h2>
        </div>
        <div class="col-md-4 col-md-offset-4 aligner">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <br>
          <div class="field">
            <%= f.label :name,"Nombre" %>
            <%= f.text_field :name , class: "form-control"%>
          </div>

          <br>
          <div class="field">
            <%= f.label :last_name, "Apellidos" %>
            <%= f.text_field :last_name , class: "form-control" %>

          </div>

          <br>
          <div class="field">
            <%= f.label :sex, "Sexo" %>
            <%= f.select(:sex, ['Hombre', 'Mujer'], {}, { :class => 'form-control' }) %>
          </div>

          <br>
          <div class="field">
            <%= f.label :birthday,"Fecha de Nacimiento" %>
        <%= f.datetime_select :birthday %>  </div>

          <br>
          <div class="field">
            <%= f.label :city,"Ciudad" %>
            <%= f.select(:city, ['Santiago'], {}, { :class => 'form-control' }) %>
          </div>

          <br>
          <div class="field">
            <%= f.label :commune,"Comuna" %>
            <%= f.text_field :commune , class: "form-control"%>

          </div>

          <br>
          <div class="field">
            <%= f.label :state,"Estado Civil" %>
            <%= f.select(:sex, ['Soltero', 'Casado','Viudo'], {}, { :class => 'form-control' }) %>
          </div>

          <br>
          <div class="field">
            <%= f.label :linkedin %>
            <%= f.text_area :linkedin, class: "form-control" %>
          </div>

          <br>
          <div class="field">
            <%= f.label :email ,"Email"%><br/>
            <%= f.email_field :email, autofocus: true , class: "form-control"%>
          </div>

          <br>
          <div class="field">
            <%= f.label :password, "ContraseÃ±a"%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>
              characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
          </div>

          <br>
          <div class="field">
            <%= f.label :password_confirmation, "Confirmar ContraseÃ±a" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <br>
          <div class="actions">
            <%= f.submit "Registrarse", class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
